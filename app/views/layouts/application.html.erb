<!DOCTYPE html>
<html>
<head>
  <title>Hamlog</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>
  <ul>
    <%- flash.each do |type, message| -%>
      <li>
        <%= "#{type.upcase}: #{message}" %>
      </li>
    <%- end -%>
  </ul>

<%= yield %>

</body>
</html>
